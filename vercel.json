{
  "version": 2,
  "functions": {
    "api/gemini.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/frontend/index.html" }
  ]
}

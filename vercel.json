{
  "functions": {
    "api/gemini.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "builds": [
    { "src": "frontend/**/*", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/frontend/index.html" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
